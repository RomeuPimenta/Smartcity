<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/corFundo</item>
        <item name="android:statusBarColor" >@color/corFundo</item>
        <item name="android:navigationBarColor">@color/corFundo</item>
        <item name="android:windowBackground">@drawable/logotiposplash</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>
